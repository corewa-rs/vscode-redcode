{
  "name": "redcode",
  "displayName": "redcode",
  "description": "Language from the REDCODE Reference Standard: ICWS'94 draft (extended)",
  "version": "0.2.1",
  "license": "MIT",
  "publisher": "corewa-rs",
  "repository": {
    "type": "git",
    "url": "https://github.com/corewa-rs/vscode-redcode.git",
    "directory": "redcode"
  },
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "core",
    "war",
    "core war",
    "wars",
    "core wars",
    "redcode"
  ],
  "contributes": {
    "languages": [
      {
        "id": "redcode",
        "aliases": [
          "Redcode",
          "redcode"
        ],
        "extensions": [
          ".red",
          ".redcode"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "redcode",
        "scopeName": "source.redcode",
        "path": "./syntaxes/redcode.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "npx js-yaml syntaxes/redcode.tmLanguage.yaml > syntaxes/redcode.tmLanguage.json",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "js-yaml": "^4.1.0",
    "@vscode/vsce": "^2.15.0"
  }
}
